generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum BACKUP_TYPE {
  FULL
  PERSONAL
}

model dns_domain {
  id    Int      @id @default(autoincrement())
  name  String   @unique @db.VarChar(255)
  type  String   @default("A") @db.VarChar(8)
  ip    String   @default("dynamic") @db.VarChar(20)
  proxy Boolean? @default(false)
}

model ips {
  id         Int      @id @default(autoincrement())
  IP         String   @db.VarChar(20)
  ChangeDate DateTime @default(dbgenerated("(curtime())")) @db.DateTime(0)
}

model backup {
  id   Int         @id @default(autoincrement())
  type BACKUP_TYPE
  date DateTime    @default(dbgenerated("(curtime())")) @db.DateTime(0)
  file String      @db.VarChar(255)
  size Int         @default(0)
}
